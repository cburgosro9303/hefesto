<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="[%level] %msg%n"/>
        </Console>
        <Console name="VerboseConsole" target="SYSTEM_ERR">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%level] %c{1} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.iumotionlabs.hefesto" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="WARN">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
